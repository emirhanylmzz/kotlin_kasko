<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3a383b"
                android:text=" Anlaşmalı Kurum Ekle"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView2"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kurum Adı:"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/kurumadi"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/transparent_bg_bordered_button"
                android:hint="    Kurum Adı..."
                android:textSize="15dp"
                android:inputType="text"
                android:maxLength="30"/>

            <TextView
                android:id="@+id/textView3"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Websitesi"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/websitesi"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/transparent_bg_bordered_button"
                android:hint="    example.com"
                android:textSize="15dp"
                android:inputType="textUri" />

            <TextView
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mail Adresi"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/transparent_bg_bordered_button"
                android:hint="    example@abc.com"
                android:textSize="15dp"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView5"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefon Numarası"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/transparent_bg_bordered_button"
                android:hint="    (5XX) XXX-XX-XX"
                android:textSize="15dp"
                android:inputType="phone"
                android:maxLength="10"
                android:digits="0123456789+"/>

            <TextView
                android:id="@+id/textView6"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kurum Türü"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/kurumturu"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/transparent_bg_bordered_button"
                android:hint="Seciniz"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/textView7"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adres"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/adres"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/transparent_bg_bordered_button"
                android:hint="    Adres"
                android:textSize="15dp"
                android:inputType="text"
                android:maxLength="40"/>

            <TextView
                android:id="@+id/textView8"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anlaşma Türü"
                android:textColor="@color/black"
                />

            <Spinner
                android:id="@+id/anlasmaturu"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/transparent_bg_bordered_button"
                android:text="Seciniz"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/textView9"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anlaşma Süresi"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/anlasmasuresi"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/transparent_bg_bordered_button"
                android:hint="    gg/aa/yyyy"
                android:textSize="15dp"
                android:inputType="date" />

            <Button
                android:id="@+id/button_ekle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:drawableRight="@drawable/dosyaekleicon"
                android:backgroundTint="#000"
                android:text="EKLE"
                android:textSize="20dp"/>
        </LinearLayout>
    </ScrollView>



