<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3a383b"
        android:text=" Kurum Bilgisi"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        app:srcCompat="@drawable/otolastik" />

    <TextView
        android:id="@+id/companyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=" Kardeşler Oto Lastik"
        android:textColor="#000"
        android:textSize="30dp"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="220dp">

        <Button
            android:id="@+id/webbutton"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@color/black"
            android:text="WEB SİTESİNE GİT"
            android:drawableLeft="@drawable/direct"
            android:textColor="#fff"
            android:textSize="15dp"
            app:backgroundTint="#000"
            />

        <Button
            android:id="@+id/arabutton"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:background="#000"
            android:text="ARA"
            android:drawableLeft="@drawable/call"
            android:textColor="#fff"
            app:backgroundTint="#000"
            android:textSize="15dp"
            />

    </LinearLayout>


</LinearLayout>
